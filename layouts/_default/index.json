{{- $.Scratch.Add "index" slice -}}
{{- range where .Site.RegularPages "Type" "not in" (slice "page" "json") -}}
  {{- $.Scratch.Add "index" (dict "title" .Title "permalink" .Permalink "content" (.Plain | truncate 500) "date" .Date "tags" .Params.tags "categories" .Params.categories) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
